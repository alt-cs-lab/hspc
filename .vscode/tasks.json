// .vscode/tasks.json
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Environment",
            "type": "shell",
            "command": "cp api/.env.example api/.env && echo 'Please populate the .env file with necessary fields.'",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "echo": true
            }
        },
        { 
            "label": "Compose Database",
            "type": "shell",
            "command": "cd api && docker compose up -d post_db",
            "dependsOn": [
                "Setup Environment" 
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "echo": true
            }
        },
        {
            "label": "Populate Database",
            "type": "shell",
            "command": "chmod u+x api/populate.sh && api/./populate.sh",
            "dependsOn": [
                "Compose Database"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "echo": true
            }
        },
        {
            "label": "NPM Install - Client",
            "type": "shell",
            "command": "cd client && npm install",
            "dependsOn": [
                "Populate Database"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "echo": true
            }
        },
        {
            "label": "NPM Install - API",
            "type": "shell",
            "command": "cd api && npm install",
            "dependsOn": [
                "Populate Database"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "echo": true
            }
        },
        {
            "label": "First Time Setup",
            "dependsOn": [
                "Setup Environment",
                "Compose Database",
                "Populate Database",
                "NPM Install - Client",
                "NPM Install - API"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "echo": true
            }
        },
        {
            "label": "Watch React - Client",
            "type": "shell",
            "command": "cd client && npm start",
            "group": "build",
            "presentation": {
                "group": "buildGroup",
                "reveal": "always",
                "panel": "new",
                "echo": false
            }
        },
        {
            "label": "Watch API - Server",
            "type": "shell",
            "command": "cd api && npm run dev",
            "group": "build",
            "presentation": {
                "group": "buildGroup",
                "reveal": "always",
                "panel": "new",
                "echo": false
            }
        },
        {
            "label": "Watch All",
            "dependsOn": [
                "Watch API - Server",
                "Watch React - Client"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "echo": true
            }
        }
    ]
}