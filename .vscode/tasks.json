// .vscode/tasks.json
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "1. Setup Environment",
            "type": "shell",
            "command": "cp api/.env.example api/.env && echo 'Please populate the .env file with necessary fields.'",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "echo": true
            }
        },
        { 
            "label": "2. Compose Database",
            "type": "shell",
            "command": "cd api && docker compose up -d post_db",
            "dependsOn": [
                "Setup Environment" 
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "echo": true
            }
        },
        {
            "label": "3. Populate Database",
            "type": "shell",
            "command": "chmod u+x api/populate.sh && api/./populate.sh",
            "dependsOn": [
                "Compose Database"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "echo": true
            }
        },
        {
            "label": "Watch React Client",
            "type": "shell",
            // switch to the server directory and launch React dev server
            "command": "cd client && npm install && npm start",
            "group": "build",
            "presentation": {
                "group": "buildGroup",
                "reveal": "always",
                "panel": "new",
                "echo": false
            }
        },
        {
            "label": "Watch API Server",
            "type": "shell",
            // Switch to the api directory and launch development server
            "command": "cd api && npm install && npm run dev",
            "group": "build",
            "presentation": {
                "group": "buildGroup",
                "reveal": "always",
                "panel": "new",
                "echo": false
            }
        },
        {
            "label": "Watch All",
            "dependsOn": [
                "Watch API Server",
                "Watch React Client"
            ],
            "group": "build",
            //"runOptions": {
            //    "runOn": "folderOpen" // This starts both tasks when the container is started
            //},
        }
    ]
}