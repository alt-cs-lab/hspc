// .vscode/tasks.json
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch React Client",
            "dependsOn": "Watch API Server",
            "type": "shell",
            // switch to the server directory and launch React dev server
            "command": "cd client && npm install && npm start",
            "group": "build",
            "presentation": {
                "group": "buildGroup",
                "reveal": "always",
                "panel": "new",
                "echo": false
            },
            "runOptions": {
                "runOn": "folderOpen" // This starts both tasks when the container is started
            }
        },
        {
            "label": "Watch API Server",
            "type": "shell",
            // Switch to the api directory and launch development server
            "command": "cd api && npm install && npm run dev",
            "group": "build",
            "presentation": {
                "group": "buildGroup",
                "reveal": "always",
                "panel": "new",
                "echo": false
            }
        }
    ]
}